<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativePadre">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/te_damos_la_bienvenida"
        android:textColor="#F975D9"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/toolBar"/>

    <TextView
        android:id="@+id/txtHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/c_mo_podemos_ayudarte"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/txtWelcome"/>

    <Button
        android:id="@+id/btnWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/perder_peso"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="#F7C1EA"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/txtHelp"/>

    <Button
        android:id="@+id/btnStrenght"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/volverme_m_s_fuerte"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="#F7C1EA"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btnWeight"/>

    <Button
        android:id="@+id/btnHealthy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mantenerse_en_forma"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="#F7C1EA"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/btnStrenght"/>

    <RelativeLayout
        android:id="@+id/relativeHijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHealthy">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/siguiente"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="#F7C1EA"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>


</RelativeLayout>
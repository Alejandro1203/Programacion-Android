<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:id="@+id/linearHijoConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtBodyPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/en_qu_parte_te_quieres_centrar"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <GridLayout
            android:id="@+id/gridHijoCheckBoxs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <CheckBox
                android:id="@+id/checkBelly"
                android:text="@string/barriga"
                android:layout_marginEnd="50dp"/>

            <CheckBox
                android:id="@+id/checkArm"
                android:text="@string/brazo"
                android:layout_marginEnd="50dp"/>

            <CheckBox
                android:id="@+id/checkLegs"
                android:text="@string/muslos"
                android:layout_marginEnd="50dp"/>

            <CheckBox
                android:id="@+id/checkBooty"
                android:text="@string/gl_teos"
                android:layout_marginEnd="50dp"/>
        </GridLayout>

        <TextView
            android:id="@+id/txtWeekObjetive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/establece_tu_objetivo_semanal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <Spinner
            android:id="@+id/spinnerDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearHijoValoracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.0"
            android:stepSize="1.0"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce el usuario: "
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/nombreEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce la contraseña (no se guardará): "
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"/>

    <!-- En este editText no definimos el id. Así indicamos a Android
    que no queremos que guarde el estado de este componente-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:saveEnabled="false"/>




</LinearLayout>
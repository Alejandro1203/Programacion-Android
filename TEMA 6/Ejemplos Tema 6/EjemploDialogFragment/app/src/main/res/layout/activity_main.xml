<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_alerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diálogo Alerta"/>

    <Button
        android:id="@+id/btn_confirmacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diálogo Confirmación"/>

    <Button
        android:id="@+id/btn_seleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diálogo Selección"/>

    <Button
        android:id="@+id/btn_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diálogo Radio"/>

    <Button
        android:id="@+id/btn_multi_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diálogo Radio Multi"/>

    <Button
        android:id="@+id/btn_Personalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diálogo Personalizado"/>

</LinearLayout>